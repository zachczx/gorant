templ NavProfileBadge(currentUser *users.User) {
	<div id="navbar-profile-badge" class="navbar-end gap-4 lg:pe-6">
		<form method="get" action="/search" class="search-bar-filled-w w-full max-w-48 transition-all duration-200 ease-out">
			<label id="nav-search-label" class="search-bar-input-spacing input input-bordered relative flex items-center gap-1 rounded-full bg-white/40">
				<input type="text" class="grow" name="q" placeholder="Search" autocomplete="off"/>
				<button aria-label="search" class="cursor-pointer bg-neutral/90 text-accent-content absolute inset-y-auto right-1.5 flex h-9 w-9 items-center justify-center rounded-full">
					<svg xmlns="http://www.w3.org/2000/svg" width="1.3em" height="1.3em" class="material-symbols:search-rounded" viewBox="0 0 24 24">
						<path fill="currentColor" d="M9.5 16q-2.725 0-4.612-1.888T3 9.5t1.888-4.612T9.5 3t4.613 1.888T16 9.5q0 1.1-.35 2.075T14.7 13.3l5.6 5.6q.275.275.275.7t-.275.7t-.7.275t-.7-.275l-5.6-5.6q-.75.6-1.725.95T9.5 16m0-2q1.875 0 3.188-1.312T14 9.5t-1.312-3.187T9.5 5T6.313 6.313T5 9.5t1.313 3.188T9.5 14"></path>
					</svg>
				</button>
			</label>
		</form>
		<div class="flex items-center">
			<div class="dropdown dropdown-end dropdown-bottom">
				<div tabindex="0" role="button" class="m-1">
					<button class="flex cursor-pointer items-center rounded-sm text-xs font-medium">
						<div class="avatar">
							<div
								if currentUser.UserID != "" {
									class="border-neutral/20 bg-base-100 w-12 rounded-full border"
								} else {
									class="border-neutral/20 bg-neutral/90 w-10 rounded-full border"
								}
							>
								if currentUser.UserID != "" {
									<img src={ string(templ.URL(currentUser.AvatarPath())) } class="scale-125" alt=""/>
								} else {
									<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" class="material-symbols:person-rounded text-neutral-content h-10 w-10 content-center justify-self-center" viewBox="0 0 24 24">
										<path fill="currentColor" d="M12 12q-1.65 0-2.825-1.175T8 8t1.175-2.825T12 4t2.825 1.175T16 8t-1.175 2.825T12 12m-8 6v-.8q0-.85.438-1.562T5.6 14.55q1.55-.775 3.15-1.162T12 13t3.25.388t3.15 1.162q.725.375 1.163 1.088T20 17.2v.8q0 .825-.587 1.413T18 20H6q-.825 0-1.412-.587T4 18"></path>
									</svg>
								}
							</div>
						</div>
					</button>
				</div>
				<ul
					tabindex="0"
					if currentUser.UserID != "" {
						class="menu dropdown-content rounded-box border-neutral/30 z-2 max-w-screen border bg-white/40 p-2 shadow-lg backdrop-blur-3xl lg:min-w-72"
					} else {
						class="menu dropdown-content rounded-box border-neutral/30 z-2 max-w-screen border bg-white/40 p-2 shadow-lg backdrop-blur-3xl"
					}
				>
					if currentUser.UserID != "" {
						<li class="border-b-neutral/30 mb-2 rounded-t-md border-b pb-2">
							<a href="/settings" class="hover:bg-transparent focus:bg-transparent active:bg-transparent" preload>
								<div class="flex">
									<div class="avatar me-2">
										<div class="border-neutral/20 bg-base-100 w-12 rounded-full border">
											<img src={ string(templ.URL(currentUser.AvatarPath())) } class="scale-125" alt=""/>
										</div>
									</div>
									if currentUser.PreferredName == currentUser.UserID {
										<div class="font-bold">{ currentUser.UserID }</div>
									} else {
										<div class="grid content-center">
											<div class="text-2xl font-bold">{ currentUser.PreferredName }</div>
											<div class="opacity-[0.6]">{ currentUser.UserID }</div>
										</div>
									}
								</div>
							</a>
						</li>
						<li class="hover:bg-primary/50 hover:text-primary-content flex rounded-md font-medium" preload>
							<a href="/profile" class="hover:bg-transparent">
								<svg xmlns="http://www.w3.org/2000/svg" width="1.3em" height="1.3em" class="material-symbols:account-box-outline me-2" viewBox="0 0 24 24">
									<path fill="currentColor" d="M5 17.85q1.35-1.325 3.138-2.087T12 15t3.863.763T19 17.85V5H5zM12 13q1.45 0 2.475-1.025T15.5 9.5t-1.025-2.475T12 6T9.525 7.025T8.5 9.5t1.025 2.475T12 13m-7 8q-.825 0-1.412-.587T3 19V5q0-.825.588-1.412T5 3h14q.825 0 1.413.588T21 5v14q0 .825-.587 1.413T19 21zm1.725-2h10.55q-1.1-.975-2.488-1.487T12 17t-2.812.513T6.725 19M12 11q-.625 0-1.062-.437T10.5 9.5t.438-1.062T12 8t1.063.438T13.5 9.5t-.437 1.063T12 11m0 .425"></path>
								</svg>
								Profile
							</a>
						</li>
						<li class="hover:bg-primary/50 hover:text-primary-content flex rounded-md font-medium" preload>
							<a href="/settings" class="hover:bg-transparent">
								<svg xmlns="http://www.w3.org/2000/svg" width="1.3em" height="1.3em" class="me-2" viewBox="0 0 24 24">
									<path fill="currentColor" d="M14.5 23q-.625 0-1.062-.437T13 21.5v-7q0-.625.438-1.062T14.5 13h7q.625 0 1.063.438T23 14.5v7q0 .625-.437 1.063T21.5 23zm-5.25-1l-.4-3.2q-.325-.125-.612-.3t-.563-.375L4.7 19.375l-2.75-4.75l2.575-1.95Q4.5 12.5 4.5 12.338v-.675q0-.163.025-.338L1.95 9.375l2.75-4.75l2.975 1.25q.275-.2.575-.375t.6-.3l.4-3.2h5.5l.4 3.2q.325.125.613.3t.562.375l2.975-1.25l2.75 4.75L19.925 11H15.4q-.35-1.075-1.25-1.787t-2.1-.713q-1.45 0-2.475 1.025T8.55 12q0 1.2.675 2.1T11 15.35V22zM15 21h6v-.825q-.625-.575-1.4-.875T18 19t-1.6.3t-1.4.875zm3-3q.625 0 1.063-.437T19.5 16.5t-.437-1.062T18 15t-1.062.438T16.5 16.5t.438 1.063T18 18"></path>
								</svg>Settings
							</a>
						</li>
						<li class="hover:bg-primary/50 hover:text-primary-content flex rounded-md font-medium">
							<a href="/logout" class="hover:bg-transparent">
								<svg xmlns="http://www.w3.org/2000/svg" width="1.3em" height="1.3em" class="me-2" viewBox="0 0 24 24">
									<path fill="currentColor" d="M5 21q-.825 0-1.412-.587T3 19V5q0-.825.588-1.412T5 3h7v2H5v14h7v2zm11-4l-1.375-1.45l2.55-2.55H9v-2h8.175l-2.55-2.55L16 7l5 5z"></path>
								</svg>Logout
							</a>
						</li>
					} else {
						<li class="hover:bg-primary/50 hover:text-primary-content flex rounded-md" preload>
							<a href="/register" class="flex items-center gap-4 font-medium hover:bg-transparent">
								<svg xmlns="http://www.w3.org/2000/svg" width="1.3em" height="1.3em" class="mdi:account-plus" viewBox="0 0 24 24">
									<path fill="currentColor" d="M15 14c-2.67 0-8 1.33-8 4v2h16v-2c0-2.67-5.33-4-8-4m-9-4V7H4v3H1v2h3v3h2v-3h3v-2m6 2a4 4 0 0 0 4-4a4 4 0 0 0-4-4a4 4 0 0 0-4 4a4 4 0 0 0 4 4"></path>
								</svg><span class="inline-block">Register</span>
							</a>
						</li>
						<li class="hover:bg-primary/50 hover:text-primary-content flex rounded-md" preload>
							<a href="/login" class="flex items-center gap-4 font-medium hover:bg-transparent">
								<svg xmlns="http://www.w3.org/2000/svg" width="1.3em" height="1.3em" class="material-symbols:login-rounded" viewBox="0 0 24 24">
									<path fill="currentColor" d="M13 21q-.425 0-.712-.288T12 20t.288-.712T13 19h6V5h-6q-.425 0-.712-.288T12 4t.288-.712T13 3h6q.825 0 1.413.588T21 5v14q0 .825-.587 1.413T19 21zm-1.825-8H4q-.425 0-.712-.288T3 12t.288-.712T4 11h7.175L9.3 9.125q-.275-.275-.275-.675t.275-.7t.7-.313t.725.288L14.3 11.3q.3.3.3.7t-.3.7l-3.575 3.575q-.3.3-.712.288T9.3 16.25q-.275-.3-.262-.712t.287-.688z"></path>
								</svg>
								<span class="inline-block">Login</span>
							</a>
						</li>
					}
				</ul>
			</div>
		</div>
	</div>
}

